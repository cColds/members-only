<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <% if (!locals.currentUser) { %>
      <h1><%= title %></h1>
      <form method="post">
        <h2>Login</h2>
        <label for="login-email">
          Email
          <input
            type="email"
            id="login-email"
            placeholder="Email"
            name="email"
            maxlength="75"
            required
          />
        </label>
        <% if (errors.email) { %>
        <p class="text-error"><%= errors.email %></p>
        <% } %>

        <label for="login-password">
          Password
          <input
            type="password"
            id="login-password"
            placeholder="Password"
            name="password"
            required
          />
        </label>
        <% if (errors.password) { %>
        <p class="text-error"><%= errors.password %></p>
        <% } %>

        <button class="submit-btn">Login</button>
      </form>
      <% } %>
    </main>
  </body>
</html>
